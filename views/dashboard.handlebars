{{# if loggedIn}}
<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-content">Content</label>
      <textarea id="post-content" name="post-content"></textarea>
    </div>
    <button type="submit" class="btn btn-danger ">Create</button>
  </form>
</section>
{{log posts.length}}
{{log posts}}
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>

      {{> post-info post}}

      <div class="py-auto">
       <button><a href="/dashboard/edit/{{post.id}}" class="edit-link text-light">Edit post</a></button>
   </div>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}
{{/if}}
<script src="/javascript/add-post.js"></script>